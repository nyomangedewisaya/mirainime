---
---
<div class="w-full pb-20 min-h-screen">
  
  <div class="w-24 h-9 rounded-full shimmer-bg mb-8"></div>

  <div class="flex flex-col md:flex-row gap-8 md:gap-12">
    
    <div class="flex md:hidden flex-col gap-3 w-full items-center text-center">
      <div class="h-10 w-3/4 rounded-xl shimmer-bg"></div>
      <div class="h-6 w-32 rounded-full shimmer-bg"></div>
    </div>
    <div class="w-full md:w-72 shrink-0 flex flex-col gap-6 items-center md:items-stretch">
      
      <div class="w-48 sm:w-56 md:w-full aspect-3/4 rounded-2xl shadow-xl border-4 border-white dark:border-slate-800 shimmer-bg shrink-0"></div>

      <div class="w-full bg-white/40 dark:bg-slate-800/20 p-4 md:p-5 rounded-2xl border border-slate-200/50 dark:border-slate-700/50 grid grid-cols-2 sm:grid-cols-3 md:flex md:flex-col gap-4 shadow-sm text-center md:text-left">
        {Array.from({ length: 6 }).map(() => (
          <div class="flex flex-col gap-2 items-center md:items-start">
            <div class="h-3 w-1/2 md:w-1/3 shimmer-bg rounded-md"></div>
            <div class="h-4 w-3/4 md:w-2/3 shimmer-bg rounded-md"></div>
          </div>
        ))}
      </div>
    </div>

    <div class="flex-1 flex flex-col items-center md:items-start gap-8 w-full">
      
      <div class="hidden md:flex flex-col gap-3 w-full items-start">
        <div class="h-12 w-2/3 lg:w-1/2 rounded-xl shimmer-bg"></div>
        <div class="h-6 w-32 rounded-full shimmer-bg"></div>
      </div>
      <div class="w-full flex flex-col items-center md:items-start mt-2 md:mt-0">
        <div class="h-6 w-32 shimmer-bg rounded-md mb-4"></div>
        <div class="flex flex-col gap-2.5 w-full items-center md:items-start">
          <div class="h-4 w-full shimmer-bg rounded-md"></div>
          <div class="h-4 w-full shimmer-bg rounded-md"></div>
          <div class="h-4 w-11/12 shimmer-bg rounded-md"></div>
          <div class="h-4 w-5/6 shimmer-bg rounded-md"></div>
          <div class="h-4 w-4/6 md:w-1/2 shimmer-bg rounded-md"></div>
        </div>
      </div>

      <div class="w-full mt-6">
        <div class="h-6 w-48 shimmer-bg rounded-md mb-6 mx-auto md:mx-0"></div>
        
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-5 w-full">
          {Array.from({ length: 10 }).map(() => (
            <div class="flex flex-col gap-2 w-full">
              <div class="w-full aspect-3/4 rounded-xl shimmer-bg shadow-sm"></div>
              <div class="flex flex-col gap-1.5 px-1 items-center md:items-start">
                <div class="h-3.5 w-3/4 shimmer-bg rounded-md"></div>
                <div class="h-2.5 w-1/2 shimmer-bg rounded-md"></div>
              </div>
            </div>
          ))}
        </div>
      </div>

    </div>
  </div>
</div>