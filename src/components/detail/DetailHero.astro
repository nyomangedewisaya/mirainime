---
import { Icon } from 'astro-icon/components'; 
import { stripHtml, formatRanking } from '../../lib/utils';
import FavoriteButton from '../ui/FavoriteButton.astro';
import { generateSlug } from '../../lib/utils';

interface Props {
  anime: any;
  type: 'anime' | 'aeni' | 'donghua' | 'manga' | 'manhwa' | 'manhua' | 'novel';
}

const { anime, type } = Astro.props;

const title = anime.title.romaji || anime.title.english || anime.title.native;
const description = stripHtml(anime.description);
const rankings = anime.rankings?.filter((r: any) => r.type === 'RATED' || r.type === 'POPULAR').slice(0, 5) || [];
---

<section class="relative w-full">
  <div class="absolute top-0 inset-x-0 h-100 md:h-125 -z-10">
    <div class="absolute inset-0 bg-slate-200 dark:bg-slate-800 animate-pulse"></div>
    {anime.bannerImage && (
      <img src={anime.bannerImage} alt="Banner" class="w-full h-full object-cover opacity-60 dark:opacity-40" />
    )}
    <div class="absolute inset-0 bg-linear-to-t from-light-bg via-light-bg/50 to-transparent dark:from-dark-bg dark:via-dark-bg/50"></div>
  </div>

  <div class="container mx-auto px-4 lg:px-8 pt-32 md:pt-52 pb-12">
    
    <button 
      onclick="window.history.length > 1 ? window.history.back() : window.location.href='/explore'" 
      class="inline-flex items-center gap-2 px-4 py-2 mb-8 md:mb-10 text-sm font-medium text-slate-800 dark:text-slate-200 bg-white/40 dark:bg-slate-900/40 hover:bg-white/60 dark:hover:bg-slate-900/60 backdrop-blur-md border border-white/20 dark:border-slate-700/50 rounded-full transition-all duration-300 w-fit group shadow-sm cursor-pointer"
    >
      <Icon name="lucide:arrow-left" class="w-4 h-4 group-hover:-translate-x-1 transition-transform duration-300" />
      Back
    </button>

    <div class="flex flex-col md:flex-row gap-8 md:gap-10 items-start">
      
      <div class="w-48 md:w-64 shrink-0 mx-auto md:mx-0 rounded-2xl overflow-hidden shadow-2xl shadow-primary-500/10 border border-slate-200/50 dark:border-slate-700/50 bg-slate-100 dark:bg-slate-800 relative z-10">
        <img src={anime.coverImage.extraLarge || anime.coverImage.large} alt={title} class="w-full h-auto object-cover aspect-2/3" />
      </div>

      <div class="flex-1 flex flex-col items-center md:items-start text-center md:text-left relative z-10 w-full">
        
        <div class="flex flex-col md:flex-row items-center md:items-start gap-4 md:gap-6 mb-2">
          <h1 class="text-3xl md:text-5xl font-extrabold text-slate-900 dark:text-white tracking-tight leading-tight">
            {title}
          </h1>
          <div class="shrink-0 md:mt-1">
            <FavoriteButton 
              id={anime.id} 
              type={type} 
              title={title} 
              image={anime.coverImage.large} 
              slug={generateSlug(title)} 
            />
          </div>
        </div>

        {anime.title.native && (
          <h2 class="text-lg md:text-xl font-medium text-slate-500 dark:text-slate-400 mb-4">
            {anime.title.native}
          </h2>
        )}

        <div class="flex flex-wrap items-center justify-center md:justify-start gap-2 mb-6 mt-2">
          {anime.genres?.map((genre: string) => (
            <span class="px-3 py-1 bg-white dark:bg-slate-800 text-primary-600 dark:text-primary-400 text-xs font-bold uppercase tracking-wider rounded-full shadow-sm border border-slate-100 dark:border-slate-700">
              {genre}
            </span>
          ))}
        </div>

        <p class="text-sm md:text-base text-slate-600 dark:text-slate-300 leading-relaxed max-w-4xl mb-6 line-clamp-4 md:line-clamp-none">
          {description || "No description available."}
        </p>

        {rankings.length > 0 && (
          <div class="flex flex-wrap gap-2.5 mt-2 justify-center md:justify-start">
            {rankings.map((r: any) => (
              <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 border border-blue-100 dark:border-blue-800/50 text-xs font-semibold capitalize shadow-sm">
                <span class="text-lg leading-none mt-1px">üèÜ</span>
                {formatRanking(r)}
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>