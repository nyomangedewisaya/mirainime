---
import { slugify } from '../../lib/utils'; 

const { characters } = Astro.props;
---

<section class="container mx-auto px-4 lg:px-8 mb-24">
  <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Characters & Voice Actors</h3>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
    {characters?.edges?.map((edge: any) => {
      const char = edge.node;
      const va = edge.voiceActors?.[0]; 
      
      return (
        <div class="flex items-stretch justify-between bg-white dark:bg-slate-800/80 border border-slate-100 dark:border-slate-800/50 rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200 h-20 md:h-24">
          
          {char && char.id ? (
            <a href={`/character/${char.id}/${slugify(char.name.full)}`} class="flex items-center gap-3 md:gap-4 flex-1 min-w-0 pr-2 group cursor-pointer hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
              <img src={char.image?.medium || '/placeholder-user.jpg'} alt={char.name.full} class="w-16 h-full md:w-20 object-cover shrink-0 bg-slate-200 dark:bg-slate-700 transition-opacity group-hover:opacity-90" loading="lazy" />
              <div class="flex flex-col min-w-0 py-2">
                <span class="text-sm md:text-base font-bold text-slate-900 dark:text-white truncate group-hover:text-primary-500 transition-colors">{char.name.full}</span>
                <span class="text-xs text-slate-500 dark:text-slate-400 capitalize truncate">{edge.role}</span>
              </div>
            </a>
          ) : (
             <div class="flex items-center gap-3 md:gap-4 flex-1 min-w-0 pr-2">
              <div class="w-16 h-full md:w-20 shrink-0 bg-slate-200 dark:bg-slate-700"></div>
            </div>
          )}

          {va && va.id ? (
            <a href={`/seiyuu/${va.id}/${slugify(va.name.full)}`} class="flex items-center justify-end gap-3 md:gap-4 flex-1 min-w-0 pl-2 bg-slate-50/50 dark:bg-slate-900/20 group cursor-pointer hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors border-l border-slate-100 dark:border-slate-800/50">
              <div class="flex flex-col items-end min-w-0 py-2">
                <span class="text-sm md:text-base font-bold text-slate-900 dark:text-white truncate text-right w-full group-hover:text-primary-500 transition-colors">{va.name.full}</span>
                <span class="text-xs text-slate-500 dark:text-slate-400 capitalize truncate text-right w-full">Japanese</span>
              </div>
              <img src={va.image?.medium || '/placeholder-user.jpg'} alt={va.name.full} class="w-16 h-full md:w-20 object-cover shrink-0 bg-slate-200 dark:bg-slate-700 transition-opacity group-hover:opacity-90" loading="lazy" />
            </a>
          ) : (
            <div class="flex items-center justify-end gap-3 md:gap-4 flex-1 min-w-0 pl-2 bg-slate-50/50 dark:bg-slate-900/20 border-l border-slate-100 dark:border-slate-800/50">
              <div class="flex flex-col items-end min-w-0 py-2">
                <span class="text-sm md:text-base font-bold text-slate-400 dark:text-slate-500 truncate text-right w-full">Unknown</span>
                <span class="text-xs text-slate-400 dark:text-slate-500 capitalize truncate text-right w-full">Voice Actor</span>
              </div>
              <div class="w-16 h-full md:w-20 shrink-0 bg-slate-200 dark:bg-slate-700 flex items-center justify-center">
                 <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
              </div>
            </div>
          )}

        </div>
      );
    })}
  </div>
</section>