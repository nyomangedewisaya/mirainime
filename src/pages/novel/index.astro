---
export const prerender = false;

import AppLayout from '../../layouts/AppLayout.astro';
import Navbar from '../../components/layout/Navbar.astro';
import Footer from '../../components/layout/Footer.astro';
import ExploreNovelContent from '../../components/content/novel/ExploreNovelContent.astro';
import SkeletonCard from '../../components/skeleton/SkeletonCard.astro';
---

<AppLayout title="Explore Novels">
  <Navbar />
  
  <main class="container mx-auto px-4 lg:px-8 py-8 md:pb-12 md:pt-5">
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-extrabold text-slate-900 dark:text-white mb-2">
        Explore Novels
      </h1>
      <p class="text-sm md:text-base text-slate-500 dark:text-slate-400">
        Discover trending, popular, highest rated, and recently releasing novels.
      </p>
    </div>

    <ExploreNovelContent server:defer>
      
      <div slot="fallback" class="flex flex-col gap-16 w-full">
        
        <section>
          <div class="h-8 w-48 rounded-md shimmer-bg mb-6"></div>
          <div class="grid grid-cols-2 md:grid-cols-5 gap-4 md:gap-6">
            {Array.from({ length: 10 }).map(() => <SkeletonCard />)}
          </div>
        </section>

        <section>
          <div class="h-8 w-56 rounded-md shimmer-bg mb-6"></div>
          <div class="grid grid-cols-2 md:grid-cols-5 gap-4 md:gap-6">
            {Array.from({ length: 10 }).map(() => <SkeletonCard />)}
          </div>
        </section>

        <section>
          <div class="h-8 w-64 rounded-md shimmer-bg mb-6"></div>
          <div class="grid grid-cols-2 md:grid-cols-5 gap-4 md:gap-6">
            {Array.from({ length: 10 }).map(() => <SkeletonCard />)}
          </div>
        </section>

        <section>
          <div class="h-8 w-64 rounded-md shimmer-bg mb-6"></div>
          <div class="grid grid-cols-2 md:grid-cols-5 gap-4 md:gap-6">
            {Array.from({ length: 10 }).map(() => <SkeletonCard />)}
          </div>
        </section>

      </div>

    </ExploreNovelContent>

  </main>
  <Footer />
</AppLayout>